class creatBOXwithNUM
  
{
	public static void main(String[] args) 
	{
		int space =0;
		int star=7;
		for (int i=1;i<=4 ;i++ )
		{
			for (int a=1;a<space  ;a++ )
			{
				system.out.println("");
			}
			for (int b=1;b<=star ;b++ )
			{
				System.out.println("*");
			}
			space++;
			star=star-2;
			System.out.println();
		}
	}
}
